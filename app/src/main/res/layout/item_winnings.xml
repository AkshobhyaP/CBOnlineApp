<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"

    app:strokeColor="@color/veryLightPink"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingEnd="8dp">

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_performance" />

        <com.codingblocks.cbonlineapp.util.widgets.GradientTextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gilroy_medium"
            android:text="You Won"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textSize="16sp" />

        <com.codingblocks.cbonlineapp.util.widgets.GradientTextView
            android:id="@+id/subTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/gilroy_bold"
            android:maxLines="2"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:text="Faang @70% off" />

        <LinearLayout
            android:id="@+id/couponCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <com.codingblocks.cbonlineapp.util.widgets.GradientTextView
                android:id="@+id/codeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/dotted_red"
                android:fontFamily="@font/gilroy_bold"
                android:text="SPN2OOHF1FBS"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/copy_clipboard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_content_copy"
                android:tint="@color/neon_red" />

        </LinearLayout>

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_medium"
            android:textAlignment="center"
            android:textSize="14sp"
            tools:text="Won 2 Days ago" />


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
